    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "name": "Debug Node.js current file",
            "runtimeArgs": [
                "-r",
                "${workspaceFolder}/node_modules//ts-node/register"
            ],
            "args": ["${file}"]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        }
    ]
}